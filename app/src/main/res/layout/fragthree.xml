<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"

        android:background="@drawable/invalidname"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="我的"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/my_xinxi"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/xinxi" />

    </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="#f00"
                android:layout_centerVertical="true"
                android:id="@+id/three_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textColor="#141931"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:layout_toRightOf="@id/three_image"
                android:layout_centerVertical="true"

                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/heise"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:id="@+id/iv_my_moreAndmore"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1c2243"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="11dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a8"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影票"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/shape"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="11dp"
        android:background="#1c2243"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/a1" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="我的关注"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_movie"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/a4" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="12sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="看过的电影"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_shezhi"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/a7" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="设置"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="158dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_yuyue"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/a2" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="我的预约"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_pinglun"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/a5" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="我的评论"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="158dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_goupiao"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/a3" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="购票记录"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_fankui"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/a6" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="意见反馈"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
