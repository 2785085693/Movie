<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >
        <ImageView
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:src="@drawable/weizhi"
            android:layout_alignParentLeft="true"
            android:id="@+id/weizhi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/weizhi"
            android:layout_marginLeft="10dp"
            android:id="@+id/crb3"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:src="@drawable/sousuo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.stx.xhb.xbanner.XBanner
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/banner_show"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:background="#1a203f"
            >
            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/re"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_show"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在热映"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_toRightOf="@id/imageView_show"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/textview_duo"
                android:textColor="#fff"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_re"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:background="#1a203f"
            >
            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/jj"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_show1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将上映"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_toRightOf="@id/imageView_show1"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/textview_duo1"
                android:textColor="#fff"
                />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_jj"
            android:layout_marginTop="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="#1a203f"
            >
            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/rm"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageView_show2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_toRightOf="@id/imageView_show2"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/textview_duo2"
                android:textColor="#fff"
                />
        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/zgjz1_h"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/zhjz"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国机长"
                android:textColor="#fff"
                android:textSize="15sp"
                android:id="@+id/jz"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.5分"
                android:textColor="#fff"
                android:textSize="15sp"
                android:id="@+id/fen"
                android:layout_toRightOf="@id/jz"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="购票"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:textSize="12sp"
                android:background="#FF00A4"

                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_men"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>