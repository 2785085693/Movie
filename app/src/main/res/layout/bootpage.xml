<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:id="@+id/boot_ImageView"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/boot_ImageView"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:id="@+id/fen"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_toRightOf="@id/fen"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView_fen"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:id="@+id/lun"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:id="@+id/tiao"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复仇者联盟4:终局之战"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动作/科幻/美国  182分钟"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201904-24 中国大陆上映"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                >
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/xin"
                    android:layout_alignParentRight="true"
                    android:id="@+id/guan"
                    android:layout_marginRight="50dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已关注"
                    android:textColor="#fff"
                    android:layout_below="@id/guan"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c2243"
            android:layout_gravity="center"
            android:id="@+id/boot_TabLayout"
            app:tabTextColor="@android:color/white"
            android:layout_marginTop="20dp"
            />
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/boot_ViewPager"

            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <RadioButton
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:text="写影评"
                android:button="@null"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#e8be18"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="选座购票"
                android:button="@null"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_weight="1"
                android:background="#e8185e"
                />
        </RadioGroup>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
